# Configuration pour Arma 3 Manifest Server
# Copiez ce fichier vers .env et modifiez les valeurs selon vos besoins

# Configuration du serveur
SERVER_NAME=localhost
SERVER_PORT=80
HTTPS_ENABLED=false

# Configuration des répertoires
MODS_DIR=./data/mods
RESSOURCES_DIR=./data/ressources
NEWS_DIR=./data/news
OUTPUT_DIR=./generated

# Configuration de la génération
GENERATE_INTERVAL=300000
WATCH_ENABLED=true

# Configuration Nginx
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024
NGINX_CLIENT_MAX_BODY_SIZE=100M

# Configuration de sécurité
RATE_LIMIT_API=10r/s
RATE_LIMIT_FILES=50r/s

# Configuration SSL (optionnel)
SSL_CERT_PATH=./nginx/ssl/cert.pem
SSL_KEY_PATH=./nginx/ssl/key.pem

# Configuration du monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Configuration des logs
LOG_LEVEL=info
LOG_FORMAT=json
