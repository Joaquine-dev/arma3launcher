{
  "name": "ar3url_launcher",
  "private": false,
  "version": "5.0.0",
  "type": "module",
  "description": "Launcher pour A3URL",
  "author": "Joaquine",
  "productName": "A3URL Launcher",
  "scripts": {
    "dev": "vite",
    "build": "node scripts/encrypt-config.js && tsc && vite build && electron-builder && node scripts/encrypt-config.js restore",
    "build:dev": "tsc && vite build && electron-builder",
    "encrypt-config": "node scripts/encrypt-config.js",
    "restore-config": "node scripts/encrypt-config.js restore",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "release": "node scripts/encrypt-config.js && tsc && vite build && electron-builder --publish always && node scripts/encrypt-config.js restore"
  },
  "dependencies": {
    "@emotion/styled": "^11.14.0",
    "@mui/material": "^6.4.4",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^10.0.1",
    "electron-updater": "^6.3.9",
    "fs-extra": "^11.3.0",
    "js-yaml": "^4.1.0",
    "lucide-react": "^0.475.0",
    "rcon-client": "^4.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.6.0",
    "react-icons": "^5.4.0",
    "react-markdown": "^9.0.3",
    "rehype-highlight": "^7.0.2",
    "update-electron-app": "^3.1.1",
    "winreg": "^1.2.5"
  },
  "devDependencies": {
    "@electron/fuses": "^1.8.0",
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@types/winreg": "^1.2.36",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "electron": "^30.0.1",
    "electron-builder": "^25.1.8",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.5.6",
    "react-router-dom": "^7.1.5",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-markdown": "^2.2.0"
  },
  "main": "dist-electron/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Joaquinee/AR3URL-Launcher.git"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  }
}
